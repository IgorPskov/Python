Stroka = input('Введите текст: ')
for i in (Stroka):
    print(i)

if 'с' in Stroka or 'С' in Stroka:
    print("Есть буква С(Русская)")
else: print("Нет буквы С(Русской)")

Bez_tretyey = Stroka [:2] + Stroka [3:]
print(Bez_tretyey)

print(len(Stroka))

Bez_Posledney = Stroka [0:-1]
print(Bez_Posledney)
